<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityC"
    android:orientation="vertical"
    android:background="#2196f3"
    android:gravity="center">

    <Button
        android:layout_marginTop="100dp"
        android:id="@+id/btn_openActivityA"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Open ActivityA"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_openActivityD"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Open ActivityD"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_closeActivityC"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Close ActivityC"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_closeStack"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Close Stack"
        tools:ignore="HardcodedText" />
</LinearLayout>